pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'ImenAmami',
                    url: 'https://github.com/imeneamami/DevOps-tp-foyer.git'
            }
        }

        // Pre-Commit: Threat Modeling
        stage('Pre-Commit: Threat Modeling') {
            steps {
                echo 'Defining Evil User Stories to identify potential security threats...'
                script {
                    // Threat modeling to identify potential attack scenarios
                    def evilUserStories = [
                        "As an attacker, I want to inject SQL queries to gain unauthorized access to the database.",
                        "As an attacker, I want to cross-site script to steal user session data.",
                        "As an attacker, I want to exploit weak passwords to gain access to user accounts."
                    ]
                    for (story in evilUserStories) {
                        echo story
                    }
                }
            }
        }

        stage('Maven Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Static Code Analysis - SonarQube') {
            steps {
                withSonarQubeEnv('sq1') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Dependency Check') {
            steps {
                echo 'Running OWASP Dependency-Check to identify vulnerabilities in dependencies...'
                sh 'mvn org.owasp:dependency-check-maven:check'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t imen1amami/tp-foyer:5.0.0 .'
                }
            }
        }

        stage('Check Permissions') {
            steps {
                script {
                    sh 'ls -l push_docker_image.sh'
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerHubCredentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh '''
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                        docker push imen1amami/tp-foyer:5.0.0
                    '''
                }
            }
        }

        stage('Dynamic Security Testing') {
            steps {
                echo 'Running dynamic security tests...'
                // Example command for running dynamic security tests, replace with actual command
                sh '''
                    curl -L -o zap-cli https://raw.githubusercontent.com/zaproxy/zap-cli/master/zap-cli
                    chmod +x zap-cli
                    ./zap-cli quick-scan --self-contained http://localhost:8080
                '''
            }
        }

        stage('Send Email Notification') {
            steps {
                script {
                    def buildStatus = currentBuild.result ?: 'SUCCESS'
                    def subject = "Build ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                    def body = """
                        The build has ${buildStatus.toLowerCase()}.
                        
                        You can find the OWASP Dependency-Check report at: ${env.BUILD_URL}artifact/target/dependency-check-report.html
                    """
                    // Send the email
                    emailext(
                        to: 'amamiimen566@gmail.com',
                        subject: subject,
                        body: body,
                        attachLog: true,
                        attachmentsPattern: 'target/dependency-check-report.html'
                    )
                }
            }
        }
    }

    post {
        always {
            // Archive the Dependency-Check report if it exists
            archiveArtifacts allowEmptyArchive: true, artifacts: 'target/dependency-check-report.html'
        }
    }
}