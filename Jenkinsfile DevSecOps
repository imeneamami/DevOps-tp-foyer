pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'ImenAmami',
                    url: 'https://github.com/imeneamami/DevOps-tp-foyer.git'
            }
        }

        // Pre-Commit Stage
        stage('Pre-Commit: Threat Modeling and Code Analysis') {
            steps {
                echo 'Performing threat modeling and checking for secure coding standards...'
                script {
                    // Define Evil User Stories for threat modeling
                    def evilUserStories = [
                        "As an attacker, I want to inject SQL queries to gain unauthorized access to the database.",
                        "As an attacker, I want to cross-site script to steal user session data.",
                        "As an attacker, I want to exploit weak passwords to gain access to user accounts."
                    ]
                    for (story in evilUserStories) {
                        echo story
                    }
                }
            }
        }

        stage('Compile Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }

        // Commit (CI) Stage
        stage('Commit: SAST with SonarQube') {
            steps {
                withSonarQubeEnv('sq1') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Commit: Dependency Management') {
            steps {
                echo 'Running OWASP Dependency-Check for vulnerabilities in dependencies...'
                sh 'mvn org.owasp:dependency-check-maven:check'
            }
        }

       // Acceptance Stage
      stage('Acceptance: Security Scanning') {
       steps {
        echo 'Running security scanning and configuration checks...'

        // Arachni: Test for XSS
        sh '''
            echo "Running Arachni for XSS vulnerabilities..."
            arachni http://192.168.50.2:8080 --report-save-path=arachni_report.afr
        '''

        // Nmap: Test for unexpected open ports
        sh '''
            echo "Running Nmap to scan for open ports..."
            nmap -sS -p 1-65535 -T4 192.168.50.2
        '''

        // SQLMap: Test for SQL injection attacks
        sh '''
            echo "Testing for SQL Injection vulnerabilities using SQLMap..."
            sqlmap -u "http://192.168.50.2:8080/vulnerable-endpoint?id=1" --batch --level=5 --risk=3 --output-dir=sqlmap_output
        '''

        // Production Stage
        stage('Production: Docker Build and Push') {
            steps {
                script {
                    sh 'docker build -t imen1amami/tp-foyer:5.0.0 .'
                }
            }
        }

        stage('Production: Check Permissions') {
            steps {
                script {
                    sh 'ls -l push_docker_image.sh'
                }
            }
        }

        stage('Production: Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerHubCredentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh '''
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                        docker push imen1amami/tp-foyer:5.0.0
                    '''
                }
            }
        }

        // Operations Stage
        stage('Operations: Dynamic Security Testing') {
            steps {
                echo 'Running dynamic security tests...'
                sh '''
                    curl -L -o zap-cli https://raw.githubusercontent.com/zaproxy/zap-cli/master/zap-cli
                    chmod +x zap-cli
                    ./zap-cli quick-scan --self-contained http://localhost:8080
                '''
            }
        }

        stage('Operations: Continuous Monitoring and Compliance') {
            steps {
                echo 'Monitoring for threats and ensuring compliance...'
                // Commands for monitoring tools, replace with actual commands as needed
            }
        }

        // Notification
        stage('Send Email Notification') {
            steps {
                script {
                    def buildStatus = currentBuild.result ?: 'SUCCESS'
                    def subject = "Build ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                    def body = """
                        The build has ${buildStatus.toLowerCase()}.

                        You can find the OWASP Dependency-Check report at: ${env.BUILD_URL}artifact/target/dependency-check-report.html
                    """
                    emailext(
                        to: 'amamiimen566@gmail.com',
                        subject: subject,
                        body: body,
                        attachLog: true,
                        attachmentsPattern: 'target/dependency-check-report.html'
                    )
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts allowEmptyArchive: true, artifacts: 'target/dependency-check-report.html'
        }
    }
}